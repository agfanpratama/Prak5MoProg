<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainAlert"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Form Mahasiswa"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/form"/>

    <!-- nama -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukan Nama Lengkap"
        android:ems="15"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:layout_below="@+id/form"
        android:layout_marginTop="45dp"
        android:id="@+id/nama"
        android:nextFocusDown="@+id/nim"/>

    <!-- NIM -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukan NIM"
        android:ems="15"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_below="@+id/nama"
        android:layout_marginTop="15dp"
        android:id="@+id/nim"
        android:nextFocusDown="@+id/tempatlahir"/>

    <!-- tempat lahir -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukan Tempat Lahir"
        android:ems="15"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:layout_below="@+id/nim"
        android:layout_marginTop="15dp"
        android:id="@+id/lahir"/>

    <!-- Button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lahir"
        android:layout_marginTop="100dp"
        android:onClick="simpan"
        android:id="@+id/simpan"/>
</RelativeLayout>